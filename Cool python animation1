import threading
import time
import os

# Define your cursed animation frames
frames = [
    "( Í¡Â° ÍœÊ– Í¡Â°)", 
    "( Í¡Â°â•­ÍœÊ–â•®Í¡Â° )", 
    "( Í¡Â° ÍœÊ– Í¡Â°)>âŒâ– -â– ", 
    "(âŒâ– _â– )", 
    "(â•¯Â°â–¡Â°ï¼‰â•¯ï¸µ â”»â”â”»", 
    "â”¬â”€â”¬ ãƒ( ã‚œ-ã‚œãƒ)"
]

def animate():
    while True:
        for frame in frames:
            os.system('cls' if os.name == 'nt' else 'clear')
            print(f"\n\n{frame}\n\n")
            time.sleep(0.3)

# Start animation in background thread
animation_thread = threading.Thread(target=animate, daemon=True)
animation_thread.start()

# Main program logic (fake productivity)
for i in range(10):
    print(f"Running task {i+1}/10... totally not AFK.")
    time.sleep(1)

print("Main task complete. Animation continues forever. ğŸŒ€")
